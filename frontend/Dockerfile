# # Use Node.js 18 LTS
# FROM node:18-alpine

# # Set working directory
# WORKDIR /app

# # Copy package files
# COPY package*.json ./

# # Install dependencies
# RUN npm install --legacy-peer-deps

# # Copy all frontend files
# COPY . .

# # Expose port
# EXPOSE 5173

# # Start dev server (for development)
# CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]